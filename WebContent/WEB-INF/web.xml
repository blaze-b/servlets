<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>Servlet_Code</display-name>
	<servlet>
		<servlet-name>Testing</servlet-name>
		<servlet-class>com.test.Testing</servlet-class>
	</servlet>
	<servlet-mapping>
	  <servlet-name>Testing</servlet-name>
	  <url-pattern>/welcome1</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>LoginCheck</servlet-name>
		<servlet-class>com.login.LoginCheck</servlet-class>
	</servlet>
	<servlet-mapping>
	  <servlet-name>LoginCheck</servlet-name>
	  <url-pattern>/LoginCheck</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>HomePage</servlet-name>
		<servlet-class>com.login.HomePage</servlet-class>
	</servlet>
	<servlet-mapping>
	  <servlet-name>HomePage</servlet-name>
	  <url-pattern>/welcome</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
	    <!-- Main page to be loaded -->
		<!--<welcome-file>Login.jsp</welcome-file>-->
		<welcome-file>loginHome.jsp</welcome-file>
	</welcome-file-list>
</web-app>